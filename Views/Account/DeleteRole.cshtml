@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "DeleteRole";
}

<h1>Delete Role</h1>

<p>Are you sure you want to delete the role : @Model.Name ?</p>


<form method="post" asp-action="DeleteRole">
    @Html.HiddenFor(x=>x.Id)

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="RolesList" asp-controller="Account" class="btn btn-success">Cancel</a>

</form>





