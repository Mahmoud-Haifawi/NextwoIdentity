@model Product

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateProduct">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">

                <tr>
                    <td> <label asp-for="CategoryId"></label></td>
                    <td>
                        <select asp-for="CategoryId" asp-items="ViewBag.allCateg" class="form-control">
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>

                    </td>
                </tr>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllProduct" asp-controller="Product">Back to List</a>
</div>
